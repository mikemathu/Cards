                </form>
            </div>
            <div class=panel-heading>
                <h6 class=panel-title>View: Fiscal Periods</h6>
            </div>
            <div class=table-responsive id=no-more-tables>
                <table class="col-md-12 table-striped table-condensed table-bordered cf compact" width=100% id=fiscalperiodstable>
                    <thead class=cf>
                        <tr>
                            <th>
                                <strong>Fiscal Period No</strong>
                            <th>
                                <strong>Open Date</strong>
                            <th>
                                <strong>Close Date</strong>
                            <th>
                                <strong>Is Active</strong>
                            <th>
                                <strong>Is Open</strong>
                    <tbody>
                </table>
            </div>
            <div class=panel-footer>
                <div class=row>
                    <div class=col-md-9>
                        <label class=radio-inline>
                            <input type=radio name=optPeriods value=1>Active
                        </label>
                        <label class=radio-inline>
                            <input type=radio name=optPeriods value=2>Inactive
                        </label>
                        <label class=radio-inline>
                            <input type=radio name=optPeriods value=3 checked>All
                        </label>
                    </div>
                    <div class=col-md-3>
                        <button id=btncloseperiod class="btn btn-primary btn-xs pull-right ladda-button" data-style=expand-right data-size=s>Close Period</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class=col-md-3></div>
</div>

