@{
    ViewBag.Title = "Fiscal Periods";    
}
<div class=row>
    <div class=col-md-9>
        <div class="panel panel-default">
            <div class=panel-heading>
                <h6 class=panel-title>Fiscal Period Details</h6>
            </div>
            <div class=panel-body>
                <form method=post id=FiscalPeriodForm>
                    <div class=row>
                        <div class=col-sm-6>
                            <input hidden type=number data-val=true data-val-required="The FiscalPeriodID field is required." id=FiscalPeriodID name=FiscalPeriodID>
                            <input id=FiscalHash hidden>
                            <div class=form-group>
                                <label>
                                    <small>Period ID</small>
                                </label>
                                <input class="form-control input-sm" readonly type=number data-val=true data-val-required="The FiscalPeriodNo field is required." id=FiscalPeriodNo name=FiscalPeriodNo>
                            </div>
                            <div class=form-group>
                                <label>
                                    <small>Open Date</small>
                                </label>
                                <input class="form-control input-sm" type=date data-val=true data-val-required="The OpenDate field is required." id=OpenDate name=OpenDate>
                            </div>
                        </div>
                        <div class=col-sm-6>
                            <div class=form-group>
                                <label>
                                    <small>Close Date</small>
                                </label>
                                <input class="form-control input-sm" type=date data-val=true data-val-required="The CloseDate field is required." id=CloseDate name=CloseDate>
                            </div>
                            <div class=form-group>
                                <div class=col-md-6>
                                    <div class=checkbox>
                                        <label class=checkbox>
                                            <input type=checkbox id=IsActive>Is Active
                                        </label>
                                    </div>
                                </div>
                                <div class=col-md-6>
                                    <div class=checkbox>
                                        <label class=checkbox>
                                            <input type=checkbox id=IsOpen disabled>Is Open
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div id=update hidden>
                                <div class="btn-group pull-right">
                                    <button id=btnupdateperiod class="btn btn-primary btn-sm ladda-button" data-style=expand-right data-size=s>Update</button>
                                    <a id=btnCreateNew class="btn btn-primary btn-sm">New</a>
                                </div>
                            </div>
                            <div id=addperiod>
                                <button id=btnaddperiod class="btn btn-primary pull-right ladda-button" data-style=expand-right data-size=s>
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </div>
                        </div>
                    </div>
